<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lambda.scarnesdice.MainActivity">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score: "
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer's Score: "
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/image_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/dice1"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/bt_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_dice"
        android:layout_marginStart="16dp"
        android:text="Roll"
        android:onClick="roll"
        />

    <Button
        android:id="@+id/bt_hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_dice"
        android:layout_marginStart="16dp"
        android:text="Hold"
        android:layout_centerHorizontal="true"
        android:onClick="hold"
        />

    <Button
        android:id="@+id/bt_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_dice"
        android:layout_marginStart="16dp"
        android:text="Reset"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:onClick="reset"
        />
</RelativeLayout>
